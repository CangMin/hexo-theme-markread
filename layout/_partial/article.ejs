<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <%- partial('post/title') %>        
        <div class="post-meta clearfix">
        <ul class="post-meta-list">
        <li><i class="icon-calendar"> </i><a datetime="<%= item.date.toDate().toISOString() %>" href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></li>
        <li><%- partial('post/category') %></li>
        <li><%- partial('post/tag') %></li>    
        </ul>     
        </div>
      <% } %>
      
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer class="article-footer">
      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comment && config.disqus_shortname){ %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
        </div>
        <% } %>
      <% } else { %>       
        <%- partial('post/share') %>
        <%- partial('post/nav') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<%- partial('comment') %>
