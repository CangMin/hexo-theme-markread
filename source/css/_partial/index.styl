nav#page-nav
  margin 0 auto
  text-align center
  a,span
    display inline-block
    margin-right 10px
    border-bottom 3px solid #ccc
    font-size 16px
    font-weight bold
    padding 3px 9px
    transition all 0.3s ease-in-out
    &:hover
      border-bottom 3px solid #333
      color #333
      background-color #55acee
      border-radius 3px
      cursor pointer
  span.current
    border-bottom 3px solid #55acee
