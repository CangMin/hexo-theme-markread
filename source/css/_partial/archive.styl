.archive-title
  color color-meta
  font-weight normal
  margin-bottom 30px
  text-shadow 0 0 1px #fff
  &:before
    font-family font-icon
    content '\f073'
    padding-right 15px

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'

.archive
  box-shadow 1px 2px 3px color-border
  border-bottom 1px solid color-border
  margin-bottom 50px
  article
    box-shadow none
    .post-content
      margin-bottom 0



#archive-page
  margin 60px 0 20px 0px

section.archive-post
  float left
  width 100%
  border 1px solid #0e90d2
  border-radius 5px
  text-align center
  padding 10px
  margin-bottom 20px
  cursor pointer
  word-wrap break-word
  overflow-x hidden
  overflow-y visible
  -webkit-transition all 0.1s ease-in-out
  -moz-transition all 0.1s ease-in-out
  -o-transition all 0.1s ease-in-out
  transition all 0.1s ease-in-out
  &:hover
    box-shadow 0 0 3px 0 #0e90d2
    transform translateY(-3px)

.archive-post time
  width 20%
  float left


h1.archive-name
  width 80%
  font-size 25px
  padding 0
  margin 0 0 0 20%
  text-align left

nav.archive-nav
  width 100%
  height 50px