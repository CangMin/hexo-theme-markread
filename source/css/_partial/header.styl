.header
  color #fff
  padding 10px 0
  width 100%
  background-color rgba(0,0,0,1.0)
  box-shadow 1px 2px 3px #0e90d2

  

.logo
  height 60px
  width 60px
  margin 0 auto
  border-radius 30px
  opacity 0.7
  &:hover
    box-shadow 0px 0px 40px #28A6E1
    opacity 1.1
    transition 0.3s ease-in

#logo
  margin:0 auto

.sitetitle,.subtitle
  float left
  width 50%
  height 44px
  line-height 44px
  vertical-align center

.sitetitle
  font-size 26px
  text-indent 25px
  -webkit-transition all 0.3s ease-in-out
  -moz-transition all 0.3s ease-in-out
  -o-transition all 0.3s ease-in-out
  -ms-transition all 0.3s ease-in-out
  transition all 0.3s ease-in-out
  a
    color #fff
    &:hover
      text-decoration none
      color #fff
  font-family font-sitename

.subtitle
  font-size 12px
  a
    color #fff
    &:hover
      text-decoration none
      color #fff

.header .navbar
  margin-bottom 0

.main-navigation .navbar-default
  background-color transparent
  border none

.main-navigation .navbar-default .navbar-nav > li > a
  color #fff
  padding 10px 20px 
  font-size 18px
  font-weight 300

.main-navigation .navbar-default .navbar-nav > li.active > a
  background-color transparent
  color #55acee

.main-navigation .navbar-default .navbar-nav > li > a:hover,
.main-navigation .navbar-default .navbar-nav > li.active > a:hover
  color:#55acee
/*
 *正常情况下的菜单
 **/
.navbar-nav > li
  float left
  
/*
*大于992时的菜单
 */
@media middle
  .navbar-nav > li
    float none
    margin 15px 5px
  .header
    position fixed
    width initial


/* Fixed Header
----------------------------------------------------------------------------- */

.fixed-header-on .header
  background-color rgba(0,0,0,0.95)
  padding 5px 0

.fixed-header-on .sitetitle
  font-size 24px

.fixed-header-on .logo
  -webkit-transform scale(0.8)
  transform scale(0.8)
  margin-top 0
  margin-bottom 0

@media (min-width:768px)
  .fixed-header-on .navbar-default .navbar-nav > li > a
    padding-top 20px
    padding-bottom 20px


/* banner
----------------------------------------------------------------------------- */
.banner
  width 100%
  position relative
  color #fff

.banner-image
  vertical-align middle
  width 100%

.banner-image > img
  width 100%
  height 300px

.banner:after
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0,0,0,0.20)
  content ""

.banner-caption
  position absolute
  top 40%
  width 100%
  z-index 2

.text-center
  padding 20px 0 0 0
  font-size 20px
